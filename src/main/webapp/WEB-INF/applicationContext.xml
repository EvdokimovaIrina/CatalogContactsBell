<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   		http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
	   		http://www.springframework.org/schema/context
	   		http://www.springframework.org/schema/context/spring-context-4.3.xsd
			http://www.springframework.org/schema/mvc
			http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd">


    <!-- Активирует различные аннотации, которые в классах bean-->
    <context:annotation-config />

    <!-- путь к классам для аннотированных компонентов, которые будут автоматически зарегистрированы как Spring beans-->
    <context:component-scan base-package="catalogContacts" />

    <!-- Настраивает управляемую аннотацией модель программирования Spring MVC-->
    <mvc:annotation-driven />

    <import resource="security.xml" />

    <import resource="hibernate-context.xml" />

    <import resource="spring-data.xml" />
</beans>